{
  "name": "gcad",
  "displayName": "GCad",
  "description": "GCad language support for Visual Studio Code",
  "author": "fpgaminer",
  "version": "0.0.2",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fpgaminer/vscode-gcad.git"
  },
  "bugs": {
    "url": "https://github.com/fpgaminer/vscode-gcad/issues"
  },
  "homepage": "https://github.com/fpgaminer/vscode-gcad/blob/master/README.md",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onCommand:gcad.showToolpaths",
    "onWebviewPanel:toolpath",
    "onLanguage:gcad"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "gcad",
        "aliases": [
          "GCad",
          "gcad"
        ],
        "extensions": [
          ".gcad"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "gcad",
        "scopeName": "source.gcad",
        "path": "./syntaxes/gcad.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "gcad.showToolpaths",
        "title": "Show Toolpaths"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compilse && num run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "@wasm-tool/wasm-pack-plugin": "1.5.0",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  }
}
